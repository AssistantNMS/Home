            </div>
        </section>

        <section class="section patreon">
            <div class="container-1180px ta-center noselect">
                <h2>Patreon</h2>
                <h3 style="font-weight: 100;">Special thank you to these amazing people ðŸ’–</h3>
                <br />
                <assistant-apps-patreon-list />
            </div>
        </section>

        <section class="section donator">
            <div class="container-1180px ta-center noselect">
                <h2>Donators</h2>
                <h3 style="font-weight: 100;">Thank you to all of these people for the donations and coffees! â˜•</h3>

                <div class="donation-grid noselect">
                    {{#each donations as |donation index|}}
                    <div class="donation-card">
                        <div class="card extraMargin">
                            <img src="/assets/img/donation/{{donation.type}}.png" alt="{{donation.type}}"
                                class="card-header-image" />
                            <div class="card-social">
                                <div class="card-social-title max-1-line">{{donation.username}}</div>
                                <div class="card-social-sub">{{donation.type}}</div>
                            </div>

                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </section>

        {{> components/footer}}

    </div>
</body>
<script async defer src="https://assistantapps.github.io/WebComponents/build/bundle.js"></script>

</html>